        <script>
            $(document).ready(function () {
                // Localizer deðerlerini JavaScript deðiþkenlerine ata
                const successMessage = '@Html.Raw(JavaScriptEncoder.Default.Encode(Localizer["Success"]?.Value ?? "Baþarýlý"))';
                const errorMessage = '@Html.Raw(JavaScriptEncoder.Default.Encode(Localizer["Error"]?.Value ?? "Hata"))';
                const errorOccurredMessage = '@Html.Raw(JavaScriptEncoder.Default.Encode(Localizer["ErrorOccurred"]?.Value ?? "Bir hata oluþtu"))';
                const okButtonText = '@Html.Raw(JavaScriptEncoder.Default.Encode(Localizer["OK"]?.Value ?? "Tamam"))';
                const languageChangeErrorMessage = '@Html.Raw(JavaScriptEncoder.Default.Encode(Localizer["LanguageChangeError"]?.Value ?? "Dil deðiþtirme sýrasýnda bir hata oluþtu"))';
                const formSuccessMessage = '@Html.Raw(JavaScriptEncoder.Default.Encode(Localizer["MessageSentSuccessfully"]?.Value ?? "Mesaj baþarýyla gönderildi"))';
                const formErrorMessage = '@Html.Raw(JavaScriptEncoder.Default.Encode(Localizer["AllFieldsRequired"]?.Value ?? "Tüm alanlar doldurulmalýdýr"))';

                // Pencere boyutuna göre menü düðmesini kontrol et
                function toggleMobileMenuSwitch() {
                    if ($(window).width() <= 767) {
                        $('.mobile-menu-switch').css({
                            'display': 'block',
                            'visibility': 'visible',
                            'opacity': '1'
                        });
                    } else {
                        $('.mobile-menu-switch').css({
                            'display': 'none',
                            'visibility': 'hidden',
                            'opacity': '0'
                        });
                    }
                }

                // Dropdown pozisyonunu güncelle
                function updateDropdownPosition() {
                    const $dropdown = $('.custom-dropdown');
                    const $dropdownContent = $('.custom-dropdown-content');
                    const $dropdownBtn = $('.custom-dropdown-btn');
                    if ($(window).width() <= 767 && $dropdown.hasClass('active')) {
                        const btnOffset = $dropdownBtn.offset().top + $dropdownBtn.outerHeight();
                        const windowScrollTop = $(window).scrollTop();
                        const topPosition = btnOffset - windowScrollTop;
                        $dropdownContent.css({
                            'top': topPosition + 'px',
                            'right': '10px'
                        });
                    } else {
                        $dropdownContent.css({
                            'top': '100%',
                            'right': '0'
                        });
                    }
                }

                // Dropdown açma/kapama için týklama kontrolü
                function toggleDropdown() {
                    const $dropdown = $('.custom-dropdown');
                    const $dropdownContent = $('.custom-dropdown-content');
                    const $dropdownBtn = $('.custom-dropdown-btn');
                    $dropdownBtn.on('click touchstart', function (e) {
                        e.preventDefault(); // Varsayýlan davranýþý engelle
                        e.stopPropagation(); // Olayýn bubbling yapmasýný engelle
                        const isActive = $dropdown.hasClass('active');
                        $dropdown.toggleClass('active', !isActive);
                        updateDropdownPosition(); // Dropdown pozisyonunu güncelle
                    });
                    // Dropdown dýþýna týklayýnca kapat
                    $(document).on('click touchstart', function (e) {
                        if (!$(e.target).closest('.custom-dropdown').length) {
                            $dropdown.removeClass('active');
                        }
                    });
                }

                // Sayfa yüklendiðinde kontrol et
                toggleMobileMenuSwitch();
                toggleDropdown();
                updateDropdownPosition();

                // Pencere boyutu deðiþtiðinde kontrol et
                $(window).resize(function () {
                    toggleMobileMenuSwitch();
                    if ($(window).width() > 767) {
                        $('.custom-dropdown').removeClass('active'); // Masaüstünde dropdown'ý kapat
                        $('.custom-dropdown-content').css('top', '100%'); // Top deðerini sýfýrla
                    }
                    updateDropdownPosition();
                });

                // Kaydýrma olayýnda dropdown pozisyonunu güncelle
                $(window).on('scroll', function () {
                    updateDropdownPosition();
                });

                // Dil deðiþtirme için AJAX iþlemi
                $('#languageForm button').on('click', function (e) {
                    e.preventDefault();
                    const culture = $(this).val();
                    const returnUrl = $('#languageForm input[name="returnUrl"]').val();
                    const token = $('#languageForm input[name="__RequestVerificationToken"]').val();
                    $.ajax({
                        url: '@Url.Action("SetLanguage", "Language")',
                        method: 'POST',
                        data: {
                            culture: culture,
                            returnUrl: returnUrl,
                            __RequestVerificationToken: token
                        },
                        success: function () {
                            window.location.href = returnUrl;
                        },
                        error: function (err) {
                            console.error('Dil deðiþtirme hatasý:', err);
                            Swal.fire({
                                icon: 'error',
                                title: errorMessage,
                                text: languageChangeErrorMessage,
                                confirmButtonText: okButtonText,
                                confirmButtonColor: '#377EF9'
                            });
                        }
                    });
                    // Dil seçimi sonrasý dropdown'u kapat
                    $('.custom-dropdown').removeClass('active');
                });

                // Dropdown ikonlarýnýn yüklendiðini kontrol et
                $('.dropdown-item.notify-item img').on('error', function () {
                    console.error('Bayrak ikonu yüklenemedi: ' + $(this).attr('src'));
                    $(this).attr('src', '/assets/images/flags/fallback_flag.png');
                });

                $('.mdi-chevron-down').each(function () {
                    if (!$(this).is(':visible')) {
                        console.warn('MDI chevron-down ikonu görünmüyor');
                    }
                });

                // Hata ayýklama için sayfa hizasýný kontrol et
                console.log('Site Container Margin:', $('.site-container').css('margin'));
                console.log('Header Container Margin:', $('.header-container').css('margin'));
                console.log('Header Width:', $('.header').width());
                console.log('Header Icons Container Width:', $('.header-icons-container').width());
            });
        </script>
