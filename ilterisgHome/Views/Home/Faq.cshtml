                    vertical-align: middle;
                }

                .custom-dropdown-content button:hover {
                    background-color: #f1f1f1;
                }

        .custom-dropdown.active .custom-dropdown-content {
            display: block; /* Aktifken görünür */
        }
        /* MDI ikonlarýnýn görünürlüðünü saðlama */
        .mdi:before {
            font-family: 'Material Design Icons' !important;
            speak: none;
            font-style: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
        /* Menü öðeleri arasýndaki boþluðu artýrma */
        .sf-menu li {
            margin-right: 15px;
        }

            .sf-menu li:last-child {
                margin-right: 0;
            }

            .sf-menu li a {
                font-size: 15px;
            }
        /* Mobil için dropdown iyileþtirmesi */
        @@media (max-width: 767px) {
            .header-icons-container

        {
            overflow: visible; /* Dropdown'un dýþarý taþmasýný saðlar */
        }

        .custom-dropdown-content {
            position: fixed; /* Mobil'de header'dan baðýmsýz */
            z-index: 1001; /* Main content üstüne getirir */
            right: 10px; /* Sað kenara hizala */
        }

        .header {
            overflow: visible !important; /* Dropdown gizlenmesin */
        }

        }
        /* Yeni Accordion Stili */
        .custom-accordion {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .custom-accordion li {
                margin-bottom: 10px;
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                background: #fff;
            }

            .custom-accordion summary {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 15px 20px;
                background: linear-gradient(to right, #f8f9fa, #e9ecef);
                cursor: pointer;
                transition: background 0.3s ease;
                font-weight: 600;
                font-size: 1.1rem;
                color: #343a40;
            }

                .custom-accordion summary:hover {
                    background: linear-gradient(to right, #e9ecef, #dee2e6);
                }

                .custom-accordion summary::-webkit-details-marker {
                    display: none; /* Varsayýlan oku kaldýr */
                }

            .custom-accordion .accordion-icon {
                font-size: 1.2rem;
                transition: transform 0.3s ease;
            }

            .custom-accordion details[open] .accordion-icon {
                transform: rotate(45deg); /* Açýkken + simgesi 45 derece döner (X olur) */
            }

            .custom-accordion .accordion-content {
                padding: 20px;
