            }
        /* Animasyon için keyframes */
        @@keyframes slideDown {
            from

        {
            opacity: 0;
            max-height: 0;
        }

        to {
            opacity: 1;
            max-height: 1000px; /* Yeterince büyük bir deðer, içeriðe göre ayarlanýr */
        }

        }
        /* Mobil cihazlar için accordion iyileþtirmesi */
