                    padding: 7px 14px;
                    font-size: 0.85rem;
                }

            .sidebar h5 {
                font-size: 1.1rem;
                margin-bottom: 15px;
            }

            .sidebar .list-group-item {
                padding: 12px;
                font-size: 0.9rem;
            }

                .sidebar .list-group-item img {
                    width: 45px;
                    height: auto;
                }

            .sidebar .badge {
                padding: 4px 8px;
                font-size: 0.8rem;
            }

            .sidebar .social-buttons {
                gap: 10px;
            }

                .sidebar .social-buttons .btn {
                    width: 40px;
                    height: 40px;
                }
        }

        @@media (max-width: 360px) {
            .featured-slider {
                min-height: auto;
            }

            .featured-card img {
                height: auto;
            }

            .featured-card h3 {
                font-size: 1.3rem;
                -webkit-line-clamp: 2;
            }

            .featured-card p {
                font-size: 0.8rem;
                -webkit-line-clamp: 2;
            }

