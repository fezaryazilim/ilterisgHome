                    overflow: hidden;
                }

                .featured-card .btn-continue {
                    padding: 8px 16px;
                    font-size: 0.85rem;
                }

            .slick-prev, .slick-next {
                width: 30px;
                height: 30px;
            }

                .slick-prev:before, .slick-next:before {
