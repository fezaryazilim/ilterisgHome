            }

            .blog-post-card h5 {
                font-size: 1rem;
            }

            .blog-post-card p {
                font-size: 0.85rem;
            }
        }
    </style>
}

<div class="mx-auto" style="padding-top:20px; padding-bottom:30px;">
    <div class="container py-2">
        <div class="row">
            <!-- Sol Alan -->
            <div class="col-lg-9">
                <!-- Öne Çıkan Yazılar Slider -->
                @if (popularPosts.Any())
                {
                    <div class="featured-slider">
                        @foreach (var post in popularPosts)
                        {
                            <div class="featured-card">
                                <div class="card bg-dark text-white">
                                    <img src="@post.ImageUrl" class="card-img" alt="@post.Title" />
                                    <div class="card-img-overlay">
                                        <h3 class="card-title">@post.Title</h3>
                                        <p class="card-text">@StripHtmlAndMedia(post.Content)</p>
                                        <a asp-action="Details" asp-route-id="@post.Id" asp-route-slug="@post.Slug" class="btn btn-continue">@Localizer["ReadMore"]</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                <!-- Yayın Akışı -->
                <div>
                    <h4 class="mb-4" data-aos="fade-right" data-aos-delay="0">@Localizer["PostStream"]</h4>
                    @if (!others.Any())
                    {
                        <p class="text-muted">@Localizer["NoBlogPostsYet"]</p>
                    }
                    else
                    {
                        var postIndex = 0;
                        @foreach (var post in others)
                        {
                            var aosClass = postIndex < 2 ? "blog-post-card initial-post" : "blog-post-card";
                            var aosDelay = postIndex < 2 ? (postIndex * 100).ToString() : "50";
                            var aosOffset = postIndex < 2 ? "0" : "50";
                            <div class="@aosClass" data-aos="fade-up" data-aos-delay="@aosDelay" data-aos-offset="@aosOffset">
                                <img src="@post.ImageUrl" alt="@post.Title" />
                                <div class="card-body">
                                    <h5 class="mt-0">@post.Title</h5>
                                    <small class="text-muted">@post.CreatedAt.ToString("dd MMMM yyyy")</small>
                                    <p>@StripHtmlAndMedia(post.Content)</p>
                                    <a asp-action="Details" asp-route-id="@post.Id" asp-route-slug="@post.Slug" class="btn btn-continue">@Localizer["ReadMore"]</a>
                                </div>
                            </div>
                            postIndex++;
                        }
                    }
                </div>
            </div>

            <!-- Sağ Alan -->
            <div class="col-lg-3 sidebar">
                <!-- Son Yazılar -->
                <div class="mb-5" data-aos="fade-left" data-aos-delay="50">
                    <h5>@Localizer["LatestPosts"]</h5>
                    <ul class="list-group">
                        @foreach (var post in latestPosts)
                        {
                            <li class="list-group-item">
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <img src="@post.ImageUrl" alt="@post.Title" />
                                }
                                <a asp-action="Details" asp-route-id="@post.Id" asp-route-slug="@post.Slug">@post.Title</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Şunlara Göz Atın -->
                <div class="mb-5" data-aos="fade-left" data-aos-delay="100">
                    <h5>@Localizer["RecommendedPosts"]</h5>
                    <ul class="list-group">
                        @foreach (var post in recommendedPosts)
                        {
                            <li class="list-group-item">
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <img src="@post.ImageUrl" alt="@post.Title" />
                                }
                                <a asp-action="Details" asp-route-id="@post.Id" asp-route-slug="@post.Slug">@post.Title</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Popüler Konular -->
                <div class="mb-5" data-aos="fade-left" data-aos-delay="150">
                    <h5>@Localizer["PopularTopics"]</h5>
                    <ul class="list-group">
                        @foreach (var post in popularPosts)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-action="Details" asp-route-id="@post.Id" asp-route-slug="@post.Slug">@post.Title</a>
                                <span class="badge rounded-pill">@post.ViewCount</span>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Sosyal Medya -->
                <div data-aos="fade-left" data-aos-delay="200">
                    <h5>@Localizer["FollowUs"]</h5>
                    <div class="social-buttons">
                        <a href="#" class="btn"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        AOS.init({
            duration: 600, // Animasyon süresini kısalttık, daha hızlı
            easing: 'ease-out-cubic',
            once: true,
            offset: 50 // Daha erken tetikleme için offset düşürüldü
        });

        $(document).ready(function () {
            // Slider için resim yükleme kontrolü
            const images = $('.featured-slider img');
            let imagesLoaded = 0;

            function initSlider() {
                $('.featured-slider').slick({
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    autoplay: true,
                    autoplaySpeed: 5000,
                    arrows: true,
                    dots: true,
                    fade: false,
                    cssEase: 'ease-in-out',
                    speed: 600,
                    prevArrow: '<button type="button" class="slick-prev"></button>',
                    nextArrow: '<button type="button" class="slick-next"></button>',
                    infinite: true,
                    pauseOnHover: true,
                    responsive: [
                        {
                            breakpoint: 576,
                            settings: {
                                arrows: false,
                                dots: true,
                                speed: 400
                            }
                        }
                    ]
                });
            }

            if (images.length === 0) {
                initSlider();
            } else {
                images.each(function () {
                    const img = new Image();
                    img.src = $(this).attr('src');
                    img.onload = img.onerror = function () {
                        imagesLoaded++;
                        if (imagesLoaded === images.length) {
                            initSlider();
                            AOS.refresh(); // Slider yüklendiğinde AOS'u yenile
                        }
                    };
                });
            }

            console.log('Slider başlatıldı. popularPosts sayısı: ' + @(popularPosts.Count));
        });
    </script>
}


