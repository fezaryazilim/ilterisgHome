            .featured-slider {
                min-height: auto;
            }

            .featured-card img {
                height: auto;
            }

            .featured-card h3 {
                font-size: 2rem;
            }

            .featured-card p {
                font-size: 1rem;
            }

            .featured-card .card-img-overlay {
                padding: 20px;
            }

            .featured-card .btn-continue {
                padding: 10px 20px;
                font-size: 0.9rem;
            }

            .blog-post-card img {
                height: auto;
            }

            .blog-post-card h5 {
                font-size: 1.3rem;
            }

            .blog-post-card .card-body {
                padding: 20px;
            }

            .blog-post-card .btn-continue {
                padding: 8px 16px;
                font-size: 0.9rem;
            }

            .sidebar {
                margin-top: 40px;
                position: static;
            }

                .sidebar .list-group-item img {
                    width: 50px;
                    height: auto;
                }

                .sidebar .social-buttons .btn {
