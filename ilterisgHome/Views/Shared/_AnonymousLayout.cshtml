@inject IConfiguration Config
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer
@{
    var metaTitle = ViewData["MetaTitle"] as string ?? ViewData["Title"] as string ?? Localizer["BlogHomePage"].Value;
    var metaDescription = ViewData["MetaDescription"] as string ?? Localizer["Description"].Value;
    var metaKeywords = ViewData["MetaKeywords"] as string ?? Localizer["Keywords"].Value;
    var canonicalUrl = ViewData["CanonicalUrl"] as string;

    var appBaseUrl = (Config["ExternalLinks:AppBaseUrl"] ?? "https://app.ilterisg.com").TrimEnd('/');
    var loginPath = Url.Action("Login", "Account") ?? "/Account/Login";
    var loginUrl = $"{appBaseUrl}{loginPath}";
    var editorLoginUrl = loginPath;
    var blogUrl = Url.RouteUrl("blog_index") ?? "/blog";
}
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.2" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="keywords" content="@metaKeywords" />
    <meta name="description" content="@metaDescription" />
    @if (!string.IsNullOrWhiteSpace(canonicalUrl))
    {
        <link rel="canonical" href="@canonicalUrl" />
    }
    <title>@metaTitle - @Localizer["AppName"]</title>

    <link rel="shortcut icon" href="~/assets/images/favicon.ico" />

    <link href='//fonts.googleapis.com/css?family=Nunito+Sans:300,400,600&subset=latin-ext' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Montserrat:500,600&subset=latin-ext' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="~/style/reset.css">
    <link rel="stylesheet" type="text/css" href="~/style/superfish.css">
    <link rel="stylesheet" type="text/css" href="~/style/prettyPhoto.css">
    <link rel="stylesheet" type="text/css" href="~/style/jquery.qtip.css">
    <link rel="stylesheet" type="text/css" href="~/style/style.css">
    <link rel="stylesheet" type="text/css" href="~/style/animations.css">
    <link rel="stylesheet" type="text/css" href="~/style/responsive.css">
    <link rel="stylesheet" type="text/css" href="~/style/odometer-theme-default.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/features/style.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/template/style.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/template-big/style.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/social/style.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #F5F7FA;
            margin: 0;
            min-height: 100vh;
            position: relative;
        }

        .main-content {
            padding: 20px;
            min-height: calc(100vh - 160px);
            margin-top: 80px;
        }

        .container-fluid {
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
            z-index: 998;
            font-size: 0.9rem;
            color: #6c757d;
        }

        .footer a {
            color: #2A9D8F;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body class="fp-site-preloader">
    <div style="position: fixed; display: flex; align-items: center; justify-content: center; transition: background 0.5s ease 0s; left: 0; top: 0; width: 100%; height: 100%; background: #FFF; z-index: 9999999;" class="fp-site-preloader-overlay">
        <div class="fp-preloader-spinner"></div>
    </div>

    <div class="site-container">
        <div class="header-container sticky">
            <div class="header clearfix">
                <div class="logo">
                    <h1>
                        <a href="@Url.Action("Index", "Home")" title="@Localizer["Home"]">
                            <img src="~/images/1-01.svg" srcset="~/images/1-01.svg" class="primary-logo" alt="@Localizer["LogoAlt"]">
                            <img src="~/images/1-01.svg" srcset="~/images/1-01.svg" class="secondary-logo" alt="@Localizer["LogoAlt"]">
                            <span class="logo-text">ILTER-ISG</span>
                        </a>
                    </h1>
                </div>

                <div class="menu-container clearfix">
                    <nav>
                        <ul class="sf-menu">
                            <li>
                                <a href="@Url.Action("Index", "Home")" title="@Localizer["Home"]">@Localizer["Home"]</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Services", "Home")" title="@Localizer["Services"]">@Localizer["Services"]</a>
                            </li>
                            <li>
                                <a href="@Url.Action("About", "Home")" title="@Localizer["About"]">@Localizer["About"]</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Contact", "Home")" title="@Localizer["Contact"]">@Localizer["Contact"]</a>
                            </li>
                            <li>
                                <a href="@blogUrl" title="@Localizer["Blog"]">@Localizer["Blog"]</a>
                            </li>
                            <li>
                                <a href="@loginUrl" title="@Localizer["Login"]">@Localizer["Login"]</a>
                            </li>
                            <li>
                                <a href="@editorLoginUrl" title="@Localizer["EditorAdminLogin"]">@Localizer["EditorAdminLogin"]</a>
                            </li>
                        </ul>
                    </nav>

                    <div class="mobile-menu-container">
                        <nav>
                            <ul class="mobile-menu collapsible-mobile-submenus">
                                <li><a class="template-big-arrow-horizontal-sm" href="#"> </a></li>
                                <li>
                                    <a href="@Url.Action("Index", "Home")" title="@Localizer["Home"]">@Localizer["Home"]</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Services", "Home")" title="@Localizer["Services"]">@Localizer["Services"]</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("About", "Home")" title="@Localizer["About"]">@Localizer["About"]</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Contact", "Home")" title="@Localizer["Contact"]">@Localizer["Contact"]</a>
                                </li>
                                <li>
                                    <a href="@blogUrl" title="@Localizer["Blog"]">@Localizer["Blog"]</a>
                                </li>
                                <li>
                                    <a href="@loginUrl" title="@Localizer["Login"]">@Localizer["Login"]</a>
                                </li>
                                <li>
                                    <a href="@editorLoginUrl" title="@Localizer["EditorAdminLogin"]">@Localizer["EditorAdminLogin"]</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>

                <div class="header-icons-container"></div>
                <a href="#" class="mobile-menu-switch">
                    <span class="line"></span>
                    <span class="line"></span>
                    <span class="line"></span>
                </a>
            </div>
        </div>

        <div class="main-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        &copy; @DateTime.UtcNow.Year @Localizer["AppName"] | @Localizer["PoweredBy"] @Localizer["AppName"]
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/jquery.ba-bbq.min.js"></script>
    <script src="~/js/jquery-ui-1.13.1.custom.min.js"></script>
    <script src="~/js/jquery.ui.touch-punch.min.js"></script>
    <script src="~/js/jquery.isotope-packed.js"></script>
    <script src="~/js/jquery.easing.1.4.1.min.js"></script>
    <script src="~/js/jquery.carouFredSel-6.2.1-packed.js"></script>
    <script src="~/js/jquery.touchSwipe.min.js"></script>
    <script src="~/js/jquery.transit.min.js"></script>
    <script src="~/js/jquery.costCalculator.min.js"></script>
    <script src="~/js/jquery.parallax.min.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>
    <script src="~/js/jquery.qtip.min.js"></script>
    <script src="~/js/jquery.blockUI.min.js"></script>
    <script src="~/js/jquery.imagesloaded-packed.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/odometer.min.js"></script>

    <script src="~/assets/libs/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/js/app.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
